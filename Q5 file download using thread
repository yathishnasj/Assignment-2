class DownloadPart extends Thread {
    private String partName;

    DownloadPart(String partName) {
        this.partName = partName;
    }

    public void run() {
        try {
            System.out.println(partName + " downloading...");
            Thread.sleep(2000); // simulate download delay
            System.out.println(partName + " completed.");
        } catch (InterruptedException e) {
            System.out.println("Download interrupted!");
        }
    }
}

public class FileDownload {
    public static void main(String[] args) {
        DownloadPart p1 = new DownloadPart("Part 1");
        DownloadPart p2 = new DownloadPart("Part 2");

        p1.start();
        try {
            p1.join();
        } catch (InterruptedException e) {}
        p2.start();
        try {
            p2.join();
        } catch (InterruptedException e) {}
        System.out.println("File download completed.");
    }
}
